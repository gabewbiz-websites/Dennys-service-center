  <script>
    // FAQ accordion
    function toggleFaq(btn) {
      const item = btn.closest('.faq-item');
      const isOpen = item.classList.contains('open');
      document.querySelectorAll('.faq-item.open').forEach(el => el.classList.remove('open'));
      if (!isOpen) item.classList.add('open');
    }

    // Scroll reveal
    const revealEls = document.querySelectorAll('.reveal, .reveal-left, .reveal-right, .stat-block');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting) {
          e.target.classList.add('visible');
          observer.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    revealEls.forEach(el => observer.observe(el));

    // Highlight today's hours
    const days = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'];
    const today = days[new Date().getDay()];
    document.querySelectorAll(`[data-day="${today}"]`).forEach(cell => {
      cell.parentElement && cell.parentElement.classList.add('hours-today');
      // Since we use display:contents, target cells directly
      cell.style.color = 'var(--orange)';
      cell.style.background = 'rgba(232,98,10,0.08)';
    });
  </script>

</body>
